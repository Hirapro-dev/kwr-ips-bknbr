generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int        @id @default(autoincrement())
  title       String
  slug        String     @unique
  content     String
  excerpt     String?
  eyecatch    String?
  published   Boolean    @default(false)
  scheduledAt DateTime?
  views       Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  clicks      Click[]
  pageViews   PageView[]

  @@index([published, createdAt])
  @@map("posts")
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String

  @@map("admins")
}

model Click {
  id        Int      @id @default(autoincrement())
  postId    Int
  url       String
  label     String?
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId, createdAt])
  @@map("clicks")
}

model PageView {
  id        Int      @id @default(autoincrement())
  postId    Int
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId, createdAt])
  @@map("page_views")
}

model CustomEditor {
  id    Int    @id @default(autoincrement())
  name  String
  icon  String
  html  String
  order Int    @default(0)

  @@map("custom_editors")
}
